{
    "settings": {
        "analysis" : {
            "analyzer" : {
                "fulltext_analyzer" : {
                    "tokenizer" : "icu_tokenizer",
                    "filter" : ["icu_folding", "snowball_german", "lowercase"]
                }
            },
            "filter" : {
                "snowball_german" : { 
                    "type" : "snowball",
                    "language" : "German2"
                }
            }
        }
    },

    "mappings": {
        "_doc": {
            "properties": {
                "id": {
                    "type": "keyword"
                },
                "full_text": {
                    "type": "text",
                    "analyzer" : "fulltext_analyzer"
                },
                "text_type" : {
                    "type": "keyword"
                },
                "expiration": {
                    "type": "date",
                    "format": "strict_date_optional_time"
                }
            }
        }
    }
}
