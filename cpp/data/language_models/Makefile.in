top_srcdir    = @top_srcdir@
mkinstalldirs = $(SHELL) $(top_srcdir)/mkinstalldirs
datarootdir   = @datarootdir@
distdir       = $(top_srcdir)/@PACKAGE@-@VERSION@/share/language_models
installdir    = @prefix@/share/iViaCore/language_models

INSTALL_FILES = COPYRIGHT *.lm
DIST_FILES    = Makefile.in $(INSTALL_FILES)
SUBDIRS       =

# special targets:
.PHONY: all clean distclean distdir dist install

all:

clean:
	rm -f *~ .*~
	$(foreach dir,$(SUBDIRS),$(MAKE) -C $(dir) clean &&) true

distclean: clean

distdir:
	$(mkinstalldirs) $(distdir)
	@INSTALL@ -m600 $(DIST_FILES) $(distdir)
	$(foreach dir,$(SUBDIRS),$(mkinstalldirs) $(distdir)/$(dir) && $(MAKE) -C $(dir) distdir &&) true

dist: distdir

install:
	$(mkinstalldirs) $(installdir)
	@INSTALL@ -m600 $(INSTALL_FILES) $(installdir)
	$(foreach dir,$(SUBDIRS),$(mkinstalldirs) $(installdir)/$(dir) && $(MAKE) -C $(dir) install &&) true
